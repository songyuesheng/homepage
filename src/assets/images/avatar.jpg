<svg width="120" height="120" viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="avatarGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4584ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cf0060;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 背景圆 -->
  <circle cx="60" cy="60" r="60" fill="url(#avatarGradient)"/>
  
  <!-- 人物轮廓 -->
  <circle cx="60" cy="45" r="20" fill="white" opacity="0.9"/>
  <path d="M20 100 Q20 80 60 80 Q100 80 100 100 L100 120 L20 120 Z" fill="white" opacity="0.9"/>
  
  <!-- 装饰元素 -->
  <circle cx="30" cy="30" r="3" fill="white" opacity="0.6">
    <animate attributeName="opacity" values="0.6;1;0.6" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="90" cy="90" r="2" fill="white" opacity="0.6">
    <animate attributeName="opacity" values="0.6;1;0.6" dur="2.5s" repeatCount="indefinite"/>
  </circle>
  
  <!-- 文字 -->
  <text x="60" y="110" text-anchor="middle" fill="white" font-family="sans-serif" font-size="10" opacity="0.8">安知鱼</text>
</svg>