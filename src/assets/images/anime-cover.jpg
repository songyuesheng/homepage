<svg width="200" height="120" viewBox="0 0 200 120" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="animeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6c5ce7;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#a29bfe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fd79a8;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="200" height="120" fill="url(#animeGradient)" rx="8"/>
  
  <!-- 紫罗兰花朵装饰 -->
  <g fill="white" opacity="0.8">
    <!-- 花朵1 -->
    <circle cx="50" cy="40" r="6"/>
    <circle cx="45" cy="35" r="4"/>
    <circle cx="55" cy="35" r="4"/>
    <circle cx="45" cy="45" r="4"/>
    <circle cx="55" cy="45" r="4"/>
    
    <!-- 花朵2 -->
    <circle cx="150" cy="30" r="5"/>
    <circle cx="146" cy="26" r="3"/>
    <circle cx="154" cy="26" r="3"/>
    <circle cx="146" cy="34" r="3"/>
    <circle cx="154" cy="34" r="3"/>
  </g>
  
  <!-- 女性轮廓（简约风格） -->
  <g fill="white" opacity="0.9">
    <ellipse cx="100" cy="50" rx="15" ry="20"/>
    <!-- 头发 -->
    <path d="M85,35 Q100,25 115,35 Q115,45 105,50 Q100,45 95,50 Q85,45 85,35" fill="white" opacity="0.7"/>
  </g>
  
  <!-- 飘散的花瓣 -->
  <g fill="white" opacity="0.6">
    <ellipse cx="30" cy="70" rx="2" ry="4" transform="rotate(15 30 70)">
      <animateTransform attributeName="transform" type="rotate" values="15 30 70;375 30 70" dur="10s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="170" cy="80" rx="1.5" ry="3" transform="rotate(45 170 80)">
      <animateTransform attributeName="transform" type="rotate" values="45 170 80;405 170 80" dur="8s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="80" cy="90" rx="2" ry="3" transform="rotate(30 80 90)">
      <animateTransform attributeName="transform" type="rotate" values="30 80 90;390 80 90" dur="12s" repeatCount="indefinite"/>
    </ellipse>
  </g>
  
  <!-- 标题文字 -->
  <text x="100" y="100" text-anchor="middle" fill="white" font-family="sans-serif" font-size="12" font-weight="bold">紫罗兰的永恒花园</text>
  <text x="100" y="112" text-anchor="middle" fill="white" font-family="sans-serif" font-size="8" opacity="0.8">Violet Evergarden</text>
</svg>