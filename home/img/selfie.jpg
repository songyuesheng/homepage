<svg width="250" height="300" viewBox="0 0 250 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="selfieGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffeaa7;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#fab1a0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fd79a8;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="250" height="300" fill="url(#selfieGradient)" rx="15"/>
  
  <!-- 人物轮廓 -->
  <ellipse cx="125" cy="120" rx="45" ry="55" fill="white" opacity="0.9"/>
  
  <!-- 眼睛 -->
  <circle cx="110" cy="110" r="4" fill="#333"/>
  <circle cx="140" cy="110" r="4" fill="#333"/>
  <circle cx="111" cy="109" r="1" fill="white"/>
  <circle cx="141" cy="109" r="1" fill="white"/>
  
  <!-- 嘴巴 -->
  <path d="M115,130 Q125,140 135,130" stroke="#333" stroke-width="2" fill="none" stroke-linecap="round"/>
  
  <!-- 头发 -->
  <path d="M80,80 Q125,50 170,80 Q170,90 160,95 Q140,85 125,90 Q110,85 90,95 Q80,90 80,80" fill="#333" opacity="0.8"/>
  
  <!-- 身体 -->
  <rect x="90" y="175" width="70" height="80" fill="white" opacity="0.8" rx="35"/>
  
  <!-- 装饰星星 -->
  <g fill="white" opacity="0.7">
    <polygon points="30,50 32,58 40,58 34,63 36,71 30,66 24,71 26,63 20,58 28,58" transform="rotate(0 30 60)">
      <animateTransform attributeName="transform" type="rotate" values="0 30 60;360 30 60" dur="8s" repeatCount="indefinite"/>
    </polygon>
    <polygon points="200,80 202,88 210,88 204,93 206,101 200,96 194,101 196,93 190,88 198,88" transform="rotate(0 200 90)">
      <animateTransform attributeName="transform" type="rotate" values="0 200 90;360 200 90" dur="6s" repeatCount="indefinite"/>
    </polygon>
    <polygon points="220,200 222,208 230,208 224,213 226,221 220,216 214,221 216,213 210,208 218,208" transform="rotate(0 220 210)">
      <animateTransform attributeName="transform" type="rotate" values="0 220 210;360 220 210" dur="7s" repeatCount="indefinite"/>
    </polygon>
  </g>
  
  <!-- 文字 -->
  <text x="125" y="280" text-anchor="middle" fill="white" font-family="sans-serif" font-size="14" font-weight="bold">📸 个人照片</text>
</svg>